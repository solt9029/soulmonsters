{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "src/**/*.spec.ts", 
    "src/**/*.test.ts", 
    "src/graphql/index.ts"
  ]
}
