{
  "name": "soulmonsters-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "22.14.0",
    "yarn": "1.22.22"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch -e 'node -r dotenv/config'",
    "start:debug": "nest start --debug --watch -e 'node -r dotenv/config'",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:up": "docker-compose -f docker-compose.yml up -d",
    "db:down": "docker-compose -f docker-compose.yml down",
    "db:migrate": "yarn typeorm migration:run -d src/dataSource.ts",
    "db:generate": "yarn typeorm migration:generate -d src/dataSource.ts src/database/migrations/Migration",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:migrate": "NODE_ENV=test yarn typeorm migration:run -d src/dataSource.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "ts-node": "ts-node",
    "console": "ts-node -r tsconfig-paths/register -r dotenv/config scripts/console.ts"
  },
  "dependencies": {
    "@apollo/gateway": "^2.11.2",
    "@nestjs/apollo": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "apollo-server-express": "^3.13.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.10.0",
    "mysql": "^2.18.1",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.2",
    "shuffle-array": "^1.0.1",
    "ts-morph": "^26.0.0",
    "typeorm": "^0.3.25",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^13.9.1",
    "@types/shuffle-array": "0.0.28",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^30.0.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^29.4.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.9.0"
  }
}
